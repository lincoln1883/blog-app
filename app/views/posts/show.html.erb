<div>
  <h1>Posts show page</h1>
  <div>
      <h3>Post <%= @post.id %> by <%= @post.author.name %></h3>

    <span>Comments: <%= @post.comments_counter %></span>
    <span>Likes: <%= @post.likes_counter %></span>
    <p>
     <%= @post.text %>
    </p>
    <div>
      <% @post.comments.each do |comment| %>
        <p><%= comment.author.name %> : <%= comment.text %></p>
      <% end %>
    </div>
  </div>
</div>